{
    "name": "video-batch-editor",
    "author": "Tolokoban",
    "description": "Electron App to edit videos in batch mode",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.3.2",
        "@testing-library/user-event": "^7.1.2",
        "@types/electron-devtools-installer": "^2.2.0",
        "@types/jest": "^24.0.0",
        "@types/node": "^13.7.1",
        "@types/react": "^16.9.0",
        "@types/react-dom": "^16.9.0",
        "electron-devtools-installer": "^2.2.4",
        "electron-is-dev": "^1.1.0",
        "electron-reload": "^1.5.0",
        "react": "^16.12.0",
        "react-dom": "^16.12.0",
        "react-scripts": "3.4.0",
        "typescript": "~3.7.2"
    },
    "homepage": ".",
    "main": "build/electron/main.js",
    "build": {
        "extends": null,
        "files": [
            "build/**/*"
        ],
        "directories": {
            "buildResources": "assets"
        }
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "postinstall": "electron-builder install-app-deps",
        "electron:dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && tsc -p electron -w\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
        "electron:build": "yarn build && tsc -p electron && electron-builder"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "concurrently": "^5.1.0",
        "electron": "^8.5.1",
        "electron-builder": "^22.3.2",
        "tfw": "^0.11.0",
        "wait-on": "^4.0.0"
    }
}
